<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow">
        <div class="card-body p-5">
          <h2 class="text-center mb-4">Email Verification</h2>
          
          <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          
          <% if (locals.message) { %>
            <div class="alert alert-success" role="alert">
              <%= message %>
            </div>
          <% } %>
          
          <div class="text-center mb-4">
            <!--<img src="/img/email-icon.png" alt="Email Verification" class="img-fluid mb-3" style="max-width: 100px;">-->
            <p>We've sent a verification email to: <strong><%= locals.email || 'your email address' %></strong></p>
            <p>Please check your inbox and click the verification link to activate your account.</p>
          </div>
          
          <div class="mt-4">
            <p class="text-center">Didn't receive the email?</p>
            <form action="/auth/resend-verification" method="POST">
              <input type="hidden" name="email" value="<%= locals.email || '' %>">
              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Resend Verification Email</button>
              </div>
            </form>
          </div>
          
          <div class="text-center mt-4">
            <a href="/auth/login">Back to Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>